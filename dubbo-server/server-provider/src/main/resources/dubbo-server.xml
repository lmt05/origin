<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--提供方信息，维护人-->
    <dubbo:application name="dubbo-server" owner="lmt"/>

    <!--注册中心-->
    <dubbo:registry address="zookeeper://192.168.126.134:2181"/>

    <!--配置协议，端口号-->
    <dubbo:protocol  name="dubbo" port="20880"/>

    <!--接口地址,配置实现-->
    <dubbo:service interface="com.lmt.dubbo.IHello" ref="helloService"/>

    <!--接口的实现-->
    <bean id="helloService" class="com.lmt.dubbo.HelloImpl"/>


</beans>